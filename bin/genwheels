#!/usr/bin/env bash

GREEN="\033[0;32m"
NC="\033[0m" # No Color
status() {
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}[  OK  ]${NC}"
    else
        echo -e "${RED}[FAILED]${NC}"
    fi
}

printf "%-80s" "Installing wheel for pip"
pip install wheel -q
status

printf "%-80s" "Generating wheels"
pip wheel --wheel-dir=wheels/ -r requirements.txt
status
